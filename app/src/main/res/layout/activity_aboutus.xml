<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AboutusActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/bga"
                android:elevation="4dp"
                android:id="@+id/toolbar"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/logo"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="About Us"
                        android:layout_marginLeft="34dp"

                        android:fontFamily="@font/gotham"
                        android:textColor="#F44336"
                        android:textSize="20sp" />



                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:id="@+id/x"
        android:textSize="29dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antqua"
        android:textColor="#000000"
        android:text="Meet the peoples behind Failure Suno App"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:layout_height="280dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/x"
        android:id="@+id/y"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:src="@drawable/al"
                android:layout_marginTop="20dp"
                android:id="@+id/image1"

                android:layout_height="180dp"></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Tarun Kumar"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/antqua"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Founder And Ceo"
                android:gravity="center"
                android:textColor="#F44336"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/antqua"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                ></TextView>


    </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:layout_height="280dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/y"
        android:id="@+id/z"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:src="@drawable/al"
            android:layout_marginTop="20dp"
            android:id="@+id/image2"

            android:layout_gravity="center"

            android:layout_height="180dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Suyash Agrawal"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/antqua"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Co-Founder "
            android:gravity="center"
            android:textColor="#F44336"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/antqua"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            ></TextView>
    </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:layout_height="280dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/z"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:src="@drawable/al"
            android:layout_marginTop="20dp"
            android:id="@+id/image3"
android:layout_gravity="center"
            android:layout_height="180dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Aman Tiwari"
            android:gravity="center"
            android:textColor="#050505"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/antqua"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Technical Member"
            android:gravity="center"
            android:textColor="#F44336"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/antqua"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            ></TextView>
    </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>